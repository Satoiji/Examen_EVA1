<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.invitado.examen_tic_tac_toe.Main"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:onClick="toggleButton"
            android:id="@+id/button_1"
            style="@android:style/Widget.Button.Inset"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_weight="1"
            android:text="-"
            android:textSize="30sp" />

        <Button
            android:onClick="toggleButton"
            android:id="@+id/button_2"
            style="@android:style/Widget.Button.Inset"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_weight="1"
            android:elevation="0dp"
            android:text="-"
            android:textSize="30sp" />

        <Button
            android:onClick="toggleButton"
            android:id="@+id/button_3"
            style="@android:style/Widget.Button.Inset"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_weight="1"
            android:text="-"
            android:textSize="30sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:onClick="toggleButton"
            android:id="@+id/button_4"
            style="@android:style/Widget.Button.Inset"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_weight="1"
            android:text="-"
            android:textSize="30sp" />

        <Button
            android:onClick="toggleButton"
            android:id="@+id/button_5"
            style="@android:style/Widget.Button.Inset"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_weight="1"
            android:text="-"
            android:textSize="30sp" />

        <Button
            android:onClick="toggleButton"
            android:id="@+id/button_6"
            style="@android:style/Widget.Button.Inset"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_weight="1"
            android:text="-"
            android:textSize="30sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:onClick="toggleButton"
            android:id="@+id/button_7"
            style="@android:style/Widget.Button.Inset"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_weight="1"
            android:text="-"
            android:textSize="30sp" />

        <Button
            android:onClick="toggleButton"
            android:id="@+id/button_8"
            style="@android:style/Widget.Button.Inset"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_weight="1"
            android:text="-"
            android:textSize="30sp" />

        <Button
            android:onClick="toggleButton"
            android:id="@+id/button_9"
            style="@android:style/Widget.Button.Inset"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_weight="1"
            android:text="-"
            android:textSize="30sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView_ganador"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.36"
        android:gravity="center"
        android:text="JUGANDO"
        android:textColor="@android:color/black"
        android:textSize="30sp" />

    <Button
        android:onClick="restart"
        android:id="@+id/button_restart"
        style="@android:style/Widget.Material.Button.Inset"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="REINICIAR JUEGO" />
</LinearLayout>
